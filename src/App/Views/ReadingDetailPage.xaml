<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="WellMind.Views.ReadingDetailPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    BackgroundColor="{AppThemeBinding Light=#E8F0ED, Dark=#0F1715}">

    <Grid RowDefinitions="Auto,*">
        <Grid Padding="24,16,24,0">
            <Button
                Text="Share"
                Style="{DynamicResource ReadingShareButton}"
                HorizontalOptions="End"
                Clicked="OnShareClicked" />
        </Grid>

        <ScrollView Grid.Row="1">
            <VerticalStackLayout Padding="24,16,24,32" Spacing="18">
                <Label
                    x:Name="TitleLabel"
                    FontSize="32"
                    FontAttributes="Bold"
                    LineBreakMode="WordWrap"
                    TextColor="{AppThemeBinding Light={DynamicResource Gray900}, Dark={DynamicResource White}}" />

                <Label
                    x:Name="SummaryLabel"
                    FontSize="22"
                    FontAttributes="None"
                    LineHeight="1.35"
                    Margin="0,0,0,6"
                    LineBreakMode="WordWrap"
                    TextColor="{AppThemeBinding Light={DynamicResource Gray900}, Dark={DynamicResource White}}" />

                <Label
                    x:Name="BodyLabel"
                    FontSize="20"
                    LineHeight="1.5"
                    LineBreakMode="WordWrap"
                    TextColor="{AppThemeBinding Light={DynamicResource Gray900}, Dark={DynamicResource White}}" />
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>

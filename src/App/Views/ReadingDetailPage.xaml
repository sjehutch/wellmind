<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="WellMind.Views.ReadingDetailPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    BackgroundColor="{AppThemeBinding Light=#E8F0ED, Dark=#0F1715}">

    <ScrollView>
        <VerticalStackLayout Padding="24,20,24,32" Spacing="18">
            <Label
                x:Name="TitleLabel"
                FontSize="32"
                FontAttributes="Bold"
                LineBreakMode="WordWrap"
                TextColor="{AppThemeBinding Light={DynamicResource Gray900}, Dark={DynamicResource White}}" />

            <Label
                x:Name="BodyLabel"
                FontSize="21"
                LineHeight="1.5"
                TextColor="{AppThemeBinding Light={DynamicResource Gray900}, Dark={DynamicResource White}}" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>

<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="WellMind.Views.MorePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="More">

    <ScrollView>
        <VerticalStackLayout Padding="24" Spacing="16">
            <Label Text="More" Style="{DynamicResource Headline}" HorizontalOptions="Start" />
            <Label Text="A few helpful places to go next." Style="{DynamicResource BodyText}" />

            <VerticalStackLayout Spacing="10">
                <Button Text="Privacy, by design" Clicked="OnPrivacyClicked" />
                <Button Text="How we score" Clicked="OnScoreClicked" />
                <Button Text="Grounded" Clicked="OnGroundedClicked" />
                <Button Text="Talk to Someone" Clicked="OnTalkToSomeoneClicked" />
            </VerticalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>

<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="WellMind.Views.PastCheckInsPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:WellMind.Views.Controls"
    Title="Past check-ins">

    <ScrollView>
        <VerticalStackLayout Padding="24" Spacing="16">
            <Label Text="Past check-ins" Style="{DynamicResource Headline}" HorizontalOptions="Start" />
            <Label Text="A simple history of your check-ins. No judgments." Style="{DynamicResource BodyText}" />

            <CollectionView ItemsSource="{Binding Items}" SelectionMode="None">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border
                            BackgroundColor="{AppThemeBinding Light={DynamicResource Gray100}, Dark={DynamicResource Gray900}}"
                            StrokeShape="RoundRectangle 12"
                            Padding="12"
                            Margin="0,0,0,8">
                            <Grid ColumnDefinitions="*,Auto,Auto" RowDefinitions="Auto,Auto" ColumnSpacing="12">
                                <Label Text="{Binding DateLocal}" FontAttributes="Bold" FontSize="14" />
                                <Label Text="{Binding Score}" Grid.Column="1" FontAttributes="Bold" />
                                <Label Text="{Binding Descriptor}" Grid.Row="1" Grid.Column="1" Style="{DynamicResource CaptionText}" />
                                <controls:ScoreDots
                                    Grid.Row="0"
                                    Grid.RowSpan="2"
                                    Grid.Column="2"
                                    Value="{Binding ScoreValue}"
                                    FillColor="{Binding ScoreColor}"
                                    EmptyColor="{AppThemeBinding Light={DynamicResource Gray200}, Dark={DynamicResource Gray600}}" />
                            </Grid>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>

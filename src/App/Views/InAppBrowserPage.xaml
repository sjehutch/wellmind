<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="WellMind.Views.InAppBrowserPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="{Binding Title}">

    <VerticalStackLayout Spacing="8">
        <Label Text="{Binding TodayDisplay}" Style="{DynamicResource DateHeadline}" Margin="24,16,24,0" />
        <WebView Source="{Binding Url}" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" />
    </VerticalStackLayout>
</ContentPage>

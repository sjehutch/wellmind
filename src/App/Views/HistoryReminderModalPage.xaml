<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="WellMind.Views.HistoryReminderModalPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    BackgroundColor="{AppThemeBinding Light=#DDECF2, Dark=#0F1B22}">

    <Grid>
        <!-- Full-screen tap to dismiss -->
        <BoxView BackgroundColor="Transparent">
            <BoxView.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding CloseCommand}" />
            </BoxView.GestureRecognizers>
        </BoxView>

        <Grid
            Padding="28"
            RowDefinitions="Auto,*">

            <!-- Close button -->
            <Grid Grid.Row="0" HorizontalOptions="End">
                <Button
                    Style="{DynamicResource ModalCloseButton}"
                    Command="{Binding CloseCommand}" />
            </Grid>

            <!-- Main content -->
            <VerticalStackLayout
                Grid.Row="1"
                VerticalOptions="Center"
                Spacing="18">

                <Label
                    Text="{Binding Title}"
                    Style="{DynamicResource SubHeadline}" />

                <Label
                    Text="{Binding EventText}"
                    Style="{DynamicResource SectionTitle}" />

                <Label
                    Text="{Binding ReflectionText}"
                    Style="{DynamicResource BodyText}" />

                <Button
                    Text="Share"
                    Command="{Binding ShareCommand}"
                    Style="{DynamicResource SecondaryButton}"
                    HorizontalOptions="Start" />
            </VerticalStackLayout>
        </Grid>
    </Grid>
</ContentPage>
